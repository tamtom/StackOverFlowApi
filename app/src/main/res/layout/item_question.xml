
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#03A100"
  >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/title_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_margin="4dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/profile_image"
        android:textColor="#ffffff"/>
    <ImageView

        android:id="@+id/tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_lock_idle_low_battery"
        android:layout_below="@id/title_question"
        android:layout_toRightOf="@id/profile_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:layout_marginTop="5dp"
        android:text="tags"
        android:layout_toRightOf="@id/tag_icon"
        android:layout_below="@id/title_question"
        />
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/owner_name"
            android:textSize="11sp"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="by"
            android:textColor="#FFFF"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:background="#eae7e7"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/like_button"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up_white_24dp"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:background="#eae7e7"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/share_button"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share_white_24dp"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:background="#eae7e7"
            android:layout_height="30dp"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/score"
            android:textColor="#fff"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_drop_up_white_24dp"/>
        <View
            android:layout_width="1dp"
            android:layout_marginLeft="5dp"
            android:background="#eae7e7"
            android:layout_height="30dp"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="ago"
            android:textColor="#FFF"
            android:id="@+id/minutes_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_query_builder_white_24dp"
                android:layout_gravity="end"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>
